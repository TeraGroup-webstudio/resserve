<footer class="footer">
    <div class="container">
        <div class="footer__wrapper">
            <div class="footer__block">
                <div class="footer__block--title">
                    <h5>{{text_catalog}}</h5>
                </div>
                <div class="footer__block--list">
                    <ul class="list-unstyled">
                    {% for category in categories %}
                        <li><a href="{{ category.href }}" class="catalog-item">{{ category.name }}</a></li>
                    {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="footer__block">
                <div class="footer__block--title">
                    <h5>{{text_offers}}</h5>
                </div>
                <div class="footer__block--list">
                    <ul class="list-unstyled">
                        <!-- add offers pages -->
                    {% for category in categories %}
                        <li><a href="{{ category.href }}" class="catalog-item">{{ category.name }}</a></li>
                    {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="footer__block">
                <div class="footer__block--title">
                    <h5>{{text_helps}}</h5>
                </div>
                <div class="footer__block--list">
                    <ul class="list-unstyled">
                        <li><a href="{{ home }}">{{ text_home }}</a></li>
                        <li><a href="{{ reviews }}">{{ text_reviews }}</a></li>
                        <li><a href="{{ special }}">{{ text_special }}</a></li>
                        <li><a href="{{ colections }}">{{ text_colections }}</a></li>
                        <li><a href="{{ manufacturers }}">{{ text_manufacturers }}</a></li>
                    {% if informations %}
                    {% for information in informations %}
                        <li><a href="{{ information.href }}">{{ information.title }}</a></li>
                    {% endfor %}
                    {% endif %}
                        <li><a href="{{ news }}">{{ text_blog }}</a></li>
                        <li><a href="{{ contact }}">{{ text_contact }}</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer__block footer__block--contacts">
                <div class="footer__block--telephone">
                    <a href="tel:{{telephone}}">{{telephone}}</a>
                    <div class="footer__block--telephones">
                        <ul class="list-unstyled">
                            {% for phone in list_phones %}
                            {% set i = i + 1 %}
                                {% if phone.title %}
                                <li>
                                    <a {% if phone.href %}href="tel:{{ phone.href }}"{% endif %}>{% if phone.image %}<img class="d-block" src="{{ phone.image }}" alt="{{ phone.title }}" />{% endif %}<span>{{ phone.title }}</span></a>
                                </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="footer__block--text footer__block--email">
                    <span>Email:</span>
                    <a href="mailto:{{config_email}}">{{config_email}}</a>
                </div>
                {% if open != '' %}
                <div class="footer__block--text footer__block--open">
                    <span>{{text_open}}</span>
                    <div class="footer__block--text-open">{{ open }}</div>
                </div>
                {% endif %}
                {% if address != '' %}
                <div class="footer__block--text footer__block--address">
                    <span>{{text_address}}</span>
                    <div class="footer__block--text-open">{{ address }}</div>
                </div>
                {% endif %}
                {% if show_form == 1 %}
                <div class="footer__block--newsletter">
                    <span>{{text_newsletter}}</span>
                    <form method="post" id="newsletter_form">
                        <input type="text" name="newsletter" placeholder="E-mail">
                        <button type="submit">{{text_subscribe}}</button>
                    </form>
                    <script>
                        $('#newsletter_form button').on('click', function(e) {
                            e.preventDefault();
                        $.ajax({
                            type: 'post',
                            url:  'index.php?route=common/footer/send',
                            dataType: 'json',
                            data: $('#newsletter_form').serialize(),
                            success: function(json) {
                                if (json['error']) {
                                if (json['error']['field']) {
                                    $('#newsletter_form input').removeClass('error_style');
                                    $.each(json['error']['field'], function(i, val) {
                                    $('#newsletter_form [name="' + i + '"]').addClass('error_style');
                                    });
                                }
                                } else {
                                if (json['output']) {
                                    $('.footer__block--newsletter').html('<p>'+ json['output'] +'</p>');
                                }
                                }
                            },
                            error: function(json){
                                console.log(json);
                            }
                        });
                        });
                    </script>
                </div>
                {% endif %}
            </div>
        </div>
        <div class="footer__bottom">
            {% if logo %}
            <div data-da=".footer__bottom--social-wrapper,1024,0" class="footer__bottom--logo">
                <img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" />
            </div>
            {% endif %}
            {% if links_icons %}
            <div class="footer__bottom--icons">
                {% for links_icon in links_icons %}
                    <div class="links_icon">
                        <img src="{{ links_icon.image_peace }}" alt="links_icon.sort">
                    </div>
                {% endfor %}
            </div>
            {% endif %}
            <div class="footer__bottom--social-wrapper">
                {% if links_seti %}
                <div class="footer__bottom--social">
                    <ul class="list-unstyled">
                    {% for item in links_seti %}
                        {% if item.link and item.image_peace %}
                        <li><a target="_blank" href="{{item.link}}"><img src="{{item.image_peace}}" alt="{{item.link}}"></a></li>
                        {% endif %}
                    {% endfor %}
                    </ul>
                </div>
            {% endif %}
            {% if list_messenger %}
                <div class="footer__bottom--social">
                    <ul class="list-unstyled">
                    {% for item in list_messenger %}
                        {% if item.href and item.image %}
                        <li><a target="_blank" href="{{item.href}}"><img src="{{item.image}}" alt="{{item.href}}"></a></li>
                        {% endif %}
                    {% endfor %}
                    </ul>
                </div>
            {% endif %}
            </div>
        </div>
    </div>
</footer>
{% for script in scripts %}
    <script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
