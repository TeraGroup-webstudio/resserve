<footer>
  <div class="container">
        <div id="logo-footer">{% if logo %}<img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" />{% else %}
            <h1><a href="{{ home }}">{{ name }}</a></h1>
          {% endif %}
        </div>
    <hr>
    <div class="container-footer">
      <div class="col col-catalog">
        <div class="title-col">{{ text_catalog }}</div>
        <div class="content-col">
          <ul class="list-unstyled">
            {% for category in categories %}
              <li><a href="{{ category.href }}" class="catalog-item">{{ category.name }}</a></li>
            {% endfor %}
          </ul>
        </div>
      </div>
      <div class="col col-information">
        <div class="title-col">{{ text_information }}</div>
        <div class="content-col">
          {% if informations %}
            <ul class="list-unstyled">
              {% for information in informations %}
                <li><a href="{{ information.href }}">{{ information.title }}</a></li>
              {% endfor %}
            </ul>
          {% endif %}

          <div class="footer_social">
            {% if links_seti %}
              <div id="seti_list">
                <div class="title">{{ text_seti }}</div>
                <div class="seti_wrapper">
                  {% for item in links_seti %}
                    <span class="seti-item">
					<a href="{{ item.link }}" class="seti-link">
                        <div class="col-auto">
                            {% if item.image_peace %}
                              <img class="icon peace-icon" src="{{ item.image_peace }}" alt="{{ item.title|striptags }} 0" />
                            {% endif %}
                        </div>
					</a>
				</span>
                  {% endfor %}
                </div>
              </div>
              <style>
                .seti_wrapper {
                  display: flex;
                  align-items: center;
                }
                .title {
                    font-size: 14px;
                    font-style: normal;
                    line-height: 30px;
                    margin-bottom: 15px;
                }
                .seti_wrapper span.seti-item {
                    margin-right: 11px;
                }
              </style>
            {% endif %}
          </div>
        </div>
          <div class="title-col">{{ text_open }}</div>
          <div class="content-col">
              {{ open }}
          </div>
      </div>

      <div class="col col-phone">
        <div class="title-col">{{ text_telephone }}</div>
          <div class="content-col">
              {% for phone in list_phones %}
                  {% set i = i + 1 %}

                  <div class="footer_tel">
                      {% if phone.image %}
                          <img class="d-block" src="{{ phone.image }}" {% if phone.image2x %} srcset="{{ phone.image }} 1x, {{ phone.image2x }} 2x, {{ phone.image3x }} 3x, {{ phone.image4x }} 4x"{% endif %} alt="" />
                      {% endif %}
                      <a class="footer_tellink" href="tel:{{ phone.title }}"><span>{{ phone.title }}</span></a>
                  </div>
                  {% if phone.href or phone.hint_text %}
                      {% if phone.hint_text %}
                          <a href="#clarification-{{ i }}" data-toggle="collapse" class="btn btn-sm btn-link {% if not phone.hint_show %} collapsed {% endif %}">
                              <svg class="d-block ft-icon-18 m-0 text-info" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                  <path d="M11 17h2v-6h-2v6zm1-15C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zM11 9h2V7h-2v2z"/>
                              </svg>
                          </a>
                      {% endif %}
                  {% endif %}

                  {% if phone.hint_text %}
                      <div class="collapse {% if phone.hint_show %} show {% endif %}" id="clarification-{{ i }}">
                          <small class="d-block text-muted mt-1">{{ phone.hint_text }}</small>
                      </div>
                  {% endif %}
              {% endfor %}
              <ul class="messanger">
                  {% for messenger in list_messenger %}
                      {% set a = a + 1 %}

                      <li class="footer_tel">
                          {% if messenger.image %}
                              <a class="footer_tellink" href="{{ messenger.href }}" target="_blank"><img class="d-block" src="{{ messenger.image }}" data-toggle="tooltip" data-placement="bottom" data-original-title="{{ messenger.hint_text }}" alt="{{ messenger.hint_text }}" /></a>
                          {% endif %}
                      </li>
                  {% endfor %}
              </ul>
          </div>

      </div>
      <div class="col col-address">
        <div class="title-col">{{ text_address }}</div>
          <div class="content-col">
              <div class="address">
                  {{ address }}
              </div>
              <div class="email">
                  <a href="mailto:{{ email }}">{{ email }}</a>
              </div>
          </div>
      </div>
      {% if show_form == 1 %}
      <div class="footer__block--newsletter">
          <span>{{text_newsletter}}</span>
          <form method="post" id="newsletter_form">
              <input type="text" name="newsletter" placeholder="E-mail">
              <button type="submit">{{text_subscribe}}</button>
          </form>
          <script>
              $('#newsletter_form button').on('click', function(e) {
                  e.preventDefault();
              $.ajax({
                  type: 'post',
                  url:  'index.php?route=common/footer/send',
                  dataType: 'json',
                  data: $('#newsletter_form').serialize(),
                  success: function(json) {
                      if (json['error']) {
                      if (json['error']['field']) {
                          $('#newsletter_form input').removeClass('error_style');
                          $.each(json['error']['field'], function(i, val) {
                          $('#newsletter_form [name="' + i + '"]').addClass('error_style');
                          });
                      }
                      } else {
                      if (json['output']) {
                          $('.footer__block--newsletter').html('<p>'+ json['output'] +'</p>');
                      }
                      }
                  },
                  error: function(json){
                      console.log(json);
                  }
              });
              });
          </script>
      </div>
      {% endif %}
    </div>
    <hr>
    <div class="powered">{{ powered }}</div>
  </div>
    <style>
        .powered {
            margin-bottom: 70px !important;
            line-height: 40px;
        }
    </style>
</footer>
<link href="catalog/view/theme/default/stylesheet/stylesheet.css" rel="stylesheet">
<script src="catalog/view/javascript/main.js" type="text/javascript"></script>
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
{% if status_one_click == 1 %}
<script src="catalog/view/javascript/popup_one_click/jquery.magnific-popup.min.js" type="text/javascript"></script>
<link href="catalog/view/javascript/popup_one_click/magnific-popup.css" rel="stylesheet" media="screen" />
<link href="catalog/view/theme/default/stylesheet/popup_one_click/stylesheet.css" rel="stylesheet" media="screen" />
<script type="text/javascript">

  function get_popup_one_click(product_id) {
    var code = '{{ code }}/';

    $.magnificPopup.open({
      tLoading: '<img src="catalog/view/theme/default/stylesheet/popup_one_click/ring-alt.svg" />',
      items: {
      src: code + 'index.php?route=product/popup_on_click&product_id=' + product_id,
        type: 'ajax'
      }
    });
  }
</script>
{% endif %}

<style>
  .messanger {
      margin: 0 auto;
      padding: 0;
      display: flex;
      flex-wrap: wrap;
      list-style-type: none;
      user-select: none;
  }

  .messanger .footer_tel:not(:last-child) {
      margin-right: 9px;
  }

  .footer_tellink {
      display: inline-block;
  }

  .footer_tel a img {
      max-width: 24px;
  }
</style>

</body></html>