{% if languages|length > 1 %}
  <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-language">
    {% if type_lang == 0 %}
      {% for language in languages %}
        {% if language.code == code %}
          <button class="language-select active" type="button" name="{{ language.code }}"><img src="catalog/language/{{ language.code }}/{{ language.code }}.png" alt="{{ language.name }}" title="{{ language.name }}" /> {{ language.name }}</button>
        {% else %}
          <button class="language-select" type="button" name="{{ language.code }}"><img src="catalog/language/{{ language.code }}/{{ language.code }}.png" alt="{{ language.name }}" title="{{ language.name }}" /> {{ language.name }}</button>
        {% endif %}
      {% endfor %}
    {% else %}
      {% for language in languages %}
        {% if (prefix_full and language.code == code) or (not prefix_full and language.code[:2] == code) %}
          <button class="language-select active" type="button" name="{{ language.code }}"><img src="catalog/language/{{ language.code }}/{{ language.code }}.png" alt="{{ language.name }}" title="{{ language.name }}" /> {{ language.name }}</button>
        {% else %}
          <button class="language-select" type="button" name="{{ language.code }}"><img src="catalog/language/{{ language.code }}/{{ language.code }}.png" alt="{{ language.name }}" title="{{ language.name }}" /> {{ language.name }}</button>
        {% endif %}
      {% endfor %}
    {% endif %}
    <input type="hidden" name="code" value="" />
    {% if type_lang == 0 %}
    <input type="hidden" name="redirect" value="{{ redirect }}" />
    {% else %}
    <input type="hidden" name="redirect_route" value="{{ redirect_route }}" />
    <input type="hidden" name="redirect_query" value="{{ redirect_query ? redirect_query : '' }}" />
    <input type="hidden" name="redirect_ssl" value="{{ redirect_ssl ? redirect_ssl : '' }}" />
    {% endif %}
  </form>
{% endif %}
