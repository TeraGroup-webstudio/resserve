{% if list_step_3 %}
    <div class="step_3slider swiper-container">
        <div class="swiper-wrapper">
        {% for step3 in list_step_3 %}
                <div class="item-step-3 swiper-slide">
                    <div class="item-step-3wraper">
                        <a href="{{ step3['url'] }}"></a>
                        <div class="item-img-step-3"><img src="{{ step3['image'] }}" class="img-responsive"></div>
                        <div class="item-title-step-3">{{ step3['title'] }}</div>
                    </div>
                </div>
        {% endfor %}
        </div>
    </div>
            <div class="steps__buttons">
                <div class="step__one--prev">
                  <svg width="11" height="20" viewBox="0 0 11 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M10 19L1 10L10 1" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                </div>
                <div class="step__one--next">
                  <svg width="11" height="20" viewBox="0 0 11 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M1 1L10 10L1 19" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                </div>
            </div>
{% endif %}
