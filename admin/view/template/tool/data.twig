{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">

            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title"><i class="fa fa-cogs fw"></i> {{ text_import }}</h4>
            </div>
            <div class="panel-body">
                {% if list_import %}
                    <div class="list-import">
                    {% for import in list_import %}
                        <div class="item-import">
                            <a href="{{ import.href }}" target="_blank">
                            <div class="item-ico">
                                {% if import.image != '' %}
                                    <div class="svg">{{ import.image }}</div>
                                {% endif %}
                            </div>
                            <div class="item-name">{{ import.text }}</div>
                            </a>
                        </div>
                    {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title"><i class="fa fa-cogs fw"></i> {{ text_export }}</h4>
            </div>
            <div class="panel-body">
                {% if list_export %}
                    <div class="list-export">
                        {% for export in list_export %}
                            <div class="item-export">
                                <a href="{{ export.href }}" target="_blank">
                                    <div class="item-ico">
                                        {% if export.image != '' %}
                                            <div class="svg">{{ export.image }}</div>
                                        {% endif %}
                                    </div>
                                    <div class="item-name">{{ export.text }}</div>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
<style>
    .item-ico .svg svg {
        width: 120px;
        height: 120px;
    }
    .item-import, .item-export {
        width: 150px;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 12px;
        padding: 15px;
    }
</style>
