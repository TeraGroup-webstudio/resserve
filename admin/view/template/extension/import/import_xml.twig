                </label>
                <div class="col-sm-9">
                  <div class="btn-group" data-toggle="buttons">
                    <label class="btn btn-default btn-danger{% if not import_import_xml_status_disable_product %} active {% endif %}">
                      <input type="radio" name="import_import_xml_status_disable_product" value="0" {% if not import_import_xml_status_disable_product %} checked {% endif %}>
                      <span class="on-off">{{ text_disabled }}</span>
                    </label>
                    <label class="btn btn-default {% if import_import_xml_status_disable_product %} active {% endif %}">
                      <input type="radio" name="import_import_xml_status_disable_product" value="1" {% if import_import_xml_status_disable_product %} checked {% endif %}>
                      <span class="on-off">{{ text_enabled }}</span>
                    </label>
                  </div>
                </div>
              </div>
