              <div class="col-sm-8">
                <div class="input-group">
                <input type="text" value="{{ cron_photo }}" class="form-control" readonly="readonly">
                  <span class="input-group-btn"><button type="button" onclick="importImage()" class="btn btn-primary">Импортировать Изображения</button></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading">
