                                                        <span class="all-hover" data-container="body" data-toggle="popover" data-placement="bottom" data-content="{{ mail.full_comment}}">&nbsp;&nbsp; <span class="all_hover"> ...</span></span>
                                                    {% endif %}
                                                </td>
                                                <td class="col-md-1">
                                                    <select id="{{ mail.id }}" class="call_status">
                                                        {%  for status in statuses %}
                                                            {% if loop.index0 ==  mail.status %}
                                                                {%  set  selected = 'selected' %}
                                                            {% else %}
                                                                {%  set  selected = '' %}
                                                            {% endif %}
                                                            <option value='{{ loop.index0 }}' data-id="{{ mail.id }}" data-product-id="{{  mail.product_id }}" {{  selected }} > {{  status }} </option>
                                                        {% endfor %}
                                                    </select>
                                                </td>
                                                <td class="col-md-1">{{mail.quantity}}</td>
                                            </tr>
                                        {% endfor %}
                                        {% endif %}
                                    </table>
                                </div>

                            </form>
                        </div>

                        <div class="tab-pane" id="tab-products">
                            <div class="well">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label class="control-label" for="input-name-products">{{entry_name}}</label>
                                                <input type="text" name="filter_name_products" value="{{filter_name_products}}" placeholder="{{entry_name}}" id="input-name-products" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label class="control-label" for="input-name-products">{{entry_model}}</label>
                                                <input type="text" name="filter_model_products" value="{{filter_model_products}}" placeholder="{{entry_model}}" id="input-model-products" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <form action="" method="post" enctype="multipart/form-data" id="form-products">
                               <div class="box">
                                    <div class="heading">
                                        <div class="buttons clearfix col-sm-4" style="margin-bottom: 5px;">

                                            <button type="button" id="button-filter-products" class="btn btn-primary"><i class="fa fa-filter"></i> {{button_filter}}</button>
                                        </div>
                                        <div class="col-sm-8">
                                            <div class="col-sm-4">
                                                <div class="col-sm-4 col-red"></div>  <div class="col-sm-10 col-text"> {{text_product_not_enough}}</div>                                         </div>
                                            <div class="col-sm-4">
                                                <div class="col-sm-4 col-green"></div> <div class="col-sm-10 col-text"> {{text_product_enough}}</div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="col-sm-4 col-gray"></div> <div class="col-sm-10 col-text"> {{text_all_avail_close}}</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="table-responsive">
                                    <table class="table">
                                        <tr>
                                            <td class="col-md-1">{{ text_model }}</td>

                                            <td class="col-md-1">
                                                {% if sort == 'a.product' %}
                                                    <a href="{{ sort_product }}" class="{{ order }}">{{ text_product }}</a>
                                                {% else %}
                                                    <a href="{{ sort_product }}">{{ text_product }}</a>
                                                {% endif %}
                                            </td>
                                            <td class="col-md-1">{{ text_quantity }}</td>
                                            <td class="col-md-1">
                                                {% if sort == 'p.price' %}
                                                    <a href="{{ sort_price }}" class="{{ order }}">{{ text_price }}</a>
                                                {% else %}
                                                    <a href="{{ sort_price }}">{{ text_price }}</a>
                                                {% endif %}
                                            </td>
                                            <td class="col-md-1">{{ text_avail_quantity }}</td>
                                            <td class="col-md-1">{{ text_avail_quantity_open }}</td>
                                        </tr>
                                        {% if products %}

                                            {%  for product in products %}
                                                {% if product.options %}
                                                    {% if product.check %}
                                                        <tr {% if product.avail_quant_open < 1 %} class="graybox" {% elseif product.quantity>0 %}  class="greenbox" {%  else %} class="redbox" {% endif %}>
                                                            <td class="col-md-1">{{ product.model }}</td>
