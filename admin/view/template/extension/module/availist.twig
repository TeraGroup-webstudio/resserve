{{header}}{{column_left}}

<div id ="content">
<div class="page-header">
    <div class="container-fluid">
	<div class="pull-right">
                <a href="{{cancel}}" data-toggle="tooltip" title="{{button_cancel}}" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
        <h1>{{heading_title}}</h1>
        <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
            <li><a href="{{breadcrumb.href}}">{{breadcrumb.text}}</a></li>
            {% endfor %}
        </ul>
    </div>
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title">{{text_list}}</h3></div>
            <div class="panel-body">
                <div class="content">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab-active" data-toggle="tab">{{tab_active}}</a></li>
                        <li><a href="#tab-closed" data-toggle="tab">{{tab_closed}}</a></li>
                       {% if avail_options_status >1 %}
                           {% else %}
                           <li><a href="#tab-products" data-toggle="tab">{{tab_products}}</a></li>
                       {% endif %}
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab-active">
                            <div class="well">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label class="control-label" for="input-name">{{entry_name }}</label>
                                                <input type="text" name="filter_name" value="{{filter_name }}" placeholder="{{entry_name }}" id="input-name" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label class="control-label" for="input-email">{{entry_email }}</label>
                                                <input type="text" name="filter_email" value="{{filter_email }}" placeholder="{{entry_email }}" id="input-email" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label class="control-label" for="input-status">{{text_entry_status }}</label>
                                                <select name="filter_status" id="input-status" class="form-control">

                                                    {% if not filter_status %}
                                                        <option value="*" selected="selected"> --- </option>
                                                        <option value="1" >{{text_filter_disabled }}</option>
                                                        <option value="0">{{text_filter_enabled }}</option>
                                                    {% else %}
                                                        {%  if filter_status %}
                                                            <option value="*" selected="selected"> --- </option>
                                                            {%  if filter_status == '1'%}
                                                                <option value="1" selected="selected">{{text_filter_disabled }}</option>
                                                                <option value="0" >{{text_filter_enabled }}</option>
                                                            {% elseif  filter_status == '0' %}
                                                                <option value="1" >{{text_filter_disabled }}</option>
                                                                <option value="0" selected="selected" >{{text_filter_enabled }}</option>
                                                            {% endif %}
                                                        {% endif %}
                                                    {% endif %}


                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="col-sm-3 {{ avail_show_model == '1'  ?'':'hidden' }}">
                                            <div class="form-group">
                                                <label class="control-label" for="input-model">{{ entry_model }}</label>
                                                <input type="text" name="filter_model" value="{{ filter_model }}" placeholder="{{  entry_model }}" id="input-model" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-sm-3 {{ avail_show_sku == '1'  ?'':'hidden' }}">
                                            <div class="form-group">
                                                <label class="control-label" for="input-model">{{ entry_sku }}</label>
                                                <input type="text" name="filter_sku" value="{{ filter_sku }}" placeholder="{{  entry_sku  }}" id="input-model" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="{{ avail_show_model =='1' or avail_show_sku =='1' ?'col-sm-3':'col-sm-4'}}">
                                            <div class="form-group">
                                                <label class="control-label" for="input-date-start">{{entry_date_start }}</label>
                                                <div class="input-group date">
                                                    <input type="text" name="filter_date_start" value="{{filter_date_start }}" placeholder="{{entry_date_start }}" data-date-format="YYYY-MM-DD" id="input-date-start" class="form-control" />
                                                    <span class="input-group-btn">
									                 <button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button>
									                </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="{{  avail_show_model =='1'?'col-sm-3':'col-sm-4' }}">
                                            <div class="form-group">
                                                <label class="control-label" for="input-date-end">{{entry_date_end }}</label>
                                                <div class="input-group date">
                                                    <input type="text" name="filter_date_end" value="{{filter_date_end }}" placeholder="{{entry_date_end }}" data-date-format="YYYY-MM-DD" id="input-date-end" class="form-control" />
                                                    <span class="input-group-btn">
									                <button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button>
									                 </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="{{ avail_show_model =='1'?'col-sm-3':'col-sm-4' }}">
                                            <div class="form-group">
                                                <label class="control-label" for="input-count">{{ text_entry_count }}</label>
                                                <select name="avlist_filter_count" id="input-count" class="form-control">

                                                    {%  if avlist_filter_count == 'all' %}
                                                        <option value="10">{{ text_filter_count_10 }}</option>
                                                        <option value="25">{{ text_filter_count_25 }}</option>
                                                        <option value="50">{{ text_filter_count_50 }}</option>
                                                        <option value="100">{{ text_filter_count_100 }}</option>
                                                        <option value="all" selected="selected">{{ text_filter_count_all }}</option>
                                                    {% elseif avlist_filter_count == 10 %}
                                                        <option value="10" selected="selected">{{ text_filter_count_10 }}</option>
                                                        <option value="25">{{ text_filter_count_25 }}</option>
                                                        <option value="50">{{ text_filter_count_50 }}</option>
                                                        <option value="100">{{ text_filter_count_100 }}</option>
                                                        <option value="all">{{ text_filter_count_all }}</option>
                                                    {% elseif  avlist_filter_count == 25 %}
                                                        <option value="10">{{ text_filter_count_10 }}</option>
                                                        <option value="25" selected="selected">{{ text_filter_count_25 }}</option>
                                                        <option value="50">{{ text_filter_count_50 }}</option>
                                                        <option value="100">{{ text_filter_count_100 }}</option>
                                                        <option value="all">{{ text_filter_count_all }}</option>
                                                    {% elseif avlist_filter_count == 50 %}
                                                        <option value="10">{{ text_filter_count_10 }}</option>
                                                        <option value="25">{{ text_filter_count_25 }}</option>
                                                        <option value="50" selected="selected">{{ text_filter_count_50 }}</option>
                                                        <option value="100">{{ text_filter_count_100 }}</option>
                                                        <option value="all">{{ text_filter_count_all }}</option>
                                                    {% elseif avlist_filter_count == 100 %}
                                                        <option value="10">{{ text_filter_count_10 }}</option>
                                                        <option value="25">{{ text_filter_count_25 }}</option>
                                                        <option value="50">{{ text_filter_count_50 }}</option>
                                                        <option value="100" selected="selected">{{ text_filter_count_100 }}</option>
                                                        <option value="all">{{ text_filter_count_all }}</option>
                                                    {% endif  %}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <form action="" method="post" enctype="multipart/form-data" id="form">
                                <div class="box">
                                    <div class="heading">
                                        <div class="buttons clearfix">
										<div class="col-sm-4">

											<a class="btn btn-primary makeLink1">{{button_send}}</a>
											<button id="update" class="btn btn-primary">{{reload}}</button>
											<button type="button" id="button-filter" class="btn btn-primary"><i class="fa fa-filter"></i> {{button_filter}}</button>

										</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="table-responsive">
                                    <table class="table">
                                        <tr>

                                            <td class="col-md-1">
                                              {% if sort == 'a.time' %}
                                                <a href="{{sort_time}}" class="{{  order|lower }}">{{text_time}}</a>
                                              {% else %}
                                                <a href="{{sort_time}}">{{text_time}}</a>
                                              {% endif %}
                                            </td>
                                            <td class="col-md-3">
                                              {% if sort == 'a.product' %}
                                                <a href="{{sort_product}}" class="{{  order|lower}}">{{text_product}}</a>
                                              {% else %}
                                                <a href="{{sort_product}}">{{text_product}}</a>
                                              {% endif %}
                                            </td>
                                            <td class="col-md-1 {{ (avail_show_model ==1)?'':'hidden'}}">
                                              {% if sort == 'p.model' %}
                                                <a href="{{sort_model}}" class="{{ order|lower}}">{{text_model}}</a>
                                              {% else %}
                                                <a href="{{sort_model}}">{{text_model}}</a>
                                              {% endif %}
                                            </td>
                                            <td class="col-md-1 {{ (avail_show_sku ==1)?'':'hidden'}}">
                                                {% if sort == 'p.model' %}
                                                    <a href="{{sort_sku}}" class="{{ order|lower}}">{{text_sku}}</a>
                                                {% else %}
                                                    <a href="{{sort_sku}}">{{text_sku}}</a>
                                                {% endif %}
                                            </td>
                                            <td class="col-md-1">
                                              {% if sort == 'p.price' %}
                                                <a href="{{sort_price}}" class="{{ order|lower }}">{{text_price}}</a>
                                              {% else %}
                                                <a href="{{sort_price}}">{{text_price}}</a>
                                              {% endif %}
                                            </td>
                                            <td class="col-md-2">
                                              {% if sort == 'a.mail' %}
                                                <a href="{{sort_mail}}" class="{{ order|lower }}">{{text_mail}}</a>
                                              {% else %}
                                                <a href="{{sort_mail}}">{{text_mail}}</a>
                                              {% endif %}
                                            </td>
                                            <td class="col-md-2">
                                            {% if sort == 'a.name' %}
                                              <a href="{{sort_name}}" class="{{ order|lower }}">{{text_name}}</a>
                                            {% else %}
                                              <a href="{{sort_name}}">{{text_name}}</a>
                                            {% endif %}
                                            </td>
                                            <td class="col-md-1 {{ (avail_show_comment_column == 1)?:hidden}}">{{text_comment}}</td>
                                            <td class="col-md-1">
                                            {% if sort == 'a.statuse' %}
                                              <a href="{{sort_statuse}}" class="{{ order|lower }}">{{text_statuse}}</a>
                                            {% else %}
                                              <a href="{{sort_statuse}}">{{text_statuse}}</a>
                                            {% endif %}
                                            </td>
                                            <td class="col-md-1">
                                              {% if sort == 'p.quantity' %}
                                                <a href="{{sort_quantity}}" class="{{ order|lower }}">{{text_quantity}}</a>
                                              {% else %}
                                                <a href="{{sort_quantity}}">{{text_quantity}}</a>
                                              {% endif %}
                                            </td>
                                            <td class="col-md-1">
                                                {% if sort == 'a.desired_quantity' %}
                                                <a href="{{  sort_desired_quantity }}" class="{{ order }}">{{ text_avail_desired_quantity }}</a>
                                                {%   else %}
                                                <a href="{{  sort_desired_quantity }}">{{  text_avail_desired_quantity }}</a>
                                                {% endif %}
                                            </td>
                                            <td class="col-md-1">
                                                {{text_arbitrary_show_hide}}
                                            </td>
                                        </tr>
                                        {% if availabilities %}
                                            {% for availability in availabilities %}
                                        <tbody class="tr_hid">
                                            <tr>

                                                <!--<td class="col-md-1">{{availability.id}}</td>-->
                                                <td class="col-md-1">{{availability.time}}</td>
                                                <td class="col-md-3">
                                                <p><a href="{{availability.edit}}"><b>{{availability.product}}</b></a></p>
                                                    {% for value in availability.options %}
                                                        <p> {{  value.option_type }} : {{ value.option_name }} ( {{ value.option_quantity }} )</p>
                                                    {% endfor %}
                                                </td>
                                                <td class="col-md-1 {{ (avail_show_model ==1)?'':'hidden'}}">{{availability.model}}</td>
                                                <td class="col-md-1 {{ (avail_show_sku ==1)?'':'hidden'}}">{{availability.sku}}</td>
                                                <td class="col-md-1">{{availability.price}}</td>
                                                <td class="col-md-2">{{availability.email}}</td>
                                                <td class="col-md-2">{{availability.name}}</td>
                                                <td class="col-md-1 {{ (avail_show_comment_column == 1)?:hidden}}">{{availability.comment}}
                                                    {%  if availability.full_comment %}
                                                        <span  class="all-hover" data-container="body" data-toggle="popover" data-placement="bottom" data-content="{{ availability.full_comment }}">&nbsp;&nbsp; <span style="cursor:pointer;"> ...</span></span>
                                                    {% endif %}
                                                </td>
                                                <td class="col-md-1">
                                                    <select id="{{ availability.id }}" class="call_status {{  availability.status == '1'?'closed':'opened'}}">
                                                        {% for status in statuses %}

                                                            {% if loop.index0 == availability.status  %}
                                                                <option value='{{ loop.index0}}' data-id="{{ availability.id }}" data-product-id="{{ availability.product_id }}" selected >{{ status}} </option>
                                                            {% else %}
                                                                <option value='{{ loop.index0}}' data-id="{{ availability.id }}" data-product-id="{{ availability.product_id }}" >{{ status}} </option>
                                                            {% endif %}

                                                        {% endfor %}
                                                    </select>
                                                </td>

                                                <td class="col-md-1">{{availability.quantity}}</td>
                                                <td class="col-md-1">{{  availability.desired_quantity }}</td>
													{% if availability.arbitrary_fields != avail_arbitrary_ifarray %}

                                                <td>
														<span class="btn btn-primary eye_hid">
															<i class="fa fa-eye"></i>
														</span>
                                                </td>
                                                {% endif %}
                                            </tr>
                                            <tr class="form_hid" style="display: none; background-color: whitesmoke;">
                                                {% for key, value in availability.arbitrary_fields %}
                                                    <td>
                                                        <b>{{avail_arbitrary_fields[key][availability.arbitrary_lang].field_name}}:</b>
                                                    </td>
                                                {% endfor %}
                                            </tr>
                                            <tr class="form_hid" style="display: none; background-color: whitesmoke;">
                                                {% for arbitrary_fields_data in availability.arbitrary_fields %}
                                                <td>
                                                    {{arbitrary_fields_data}}
                                                </td>
                                                {% endfor %}

                                            </tr>
                                        </tbody>
                                            {% endfor %}
                                        {% endif %}
                                    </table>
                                </div>
                            </form>
                        </div>

                        <div class="tab-pane" id="tab-closed">
						<div class="well">
							<div class="row">
							  <div class="col-sm-12">
								<div class="col-sm-4">
								  <div class="form-group">
									<label class="control-label" for="input-name-close">{{entry_name}}</label>
									<input type="text" name="filter_name_close" value="{{filter_name_close}}" placeholder="{{entry_name}}" id="input-name" class="form-control" />
								  </div>
								</div>
								<div class="col-sm-4">
								  <div class="form-group">
									<label class="control-label" for="input-email-close">{{entry_email}}</label>
									<input type="text" name="filter_email_close" value="{{filter_email_close}}" placeholder="{{entry_email}}" id="input-email-close" class="form-control" />
								  </div>
								</div>

								</div>
								<div class="col-sm-12">
								<div class="col-sm-4">
								  <div class="form-group">
									<label class="control-label" for="input-date-start-close">{{entry_date_start}}</label>
									<div class="input-group date">
									  <input type="text" name="filter_date_start_close" value="{{filter_date_start_close}}" placeholder="{{entry_date_start}}" data-date-format="YYYY-MM-DD" id="input-date-start-close" class="form-control" />
									  <span class="input-group-btn">
									  <button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button>
									  </span></div>
								  </div>
								</div>
								<div class="col-sm-4">
								  <div class="form-group">
									<label class="control-label" for="input-date-end-close">{{entry_date_end}}</label>
									<div class="input-group date">
									  <input type="text" name="filter_date_end_close" value="{{filter_date_end_close}}" placeholder="{{entry_date_end}}" data-date-format="YYYY-MM-DD" id="input-date-end-close" class="form-control" />
									  <span class="input-group-btn">
									  <button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button>
									  </span></div>
								  </div>
								  <div class="col-sm-4">
								  </div>
								  <div class="col-sm-4">
								  </div>
								  </div>
								</div>

							  </div>
							</div>
                            <form action="" method="post" enctype="multipart/form-data" id="form">
                                <div class="box">
                                    <div class="heading">
                                        <div class="buttons clearfix">
											<a id="delete" class="btn btn-primary">{{button_delete}}</a>
											<button id="update" class="btn btn-primary">{{reload}}</button>
											<button type="button" id="button-filter-close" class="btn btn-primary"><i class="fa fa-filter"></i> {{button_filter}}</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="table-responsive">
                                    <table class="table">
                                        <tr>
                                            <td class="col-md-1"><input type="checkbox" id="checkall"></td>
                                            <td class="col-md-1">{{id}}</td>
                                            <td class="col-md-1">{{text_time}}</td>
                                            <td class="col-md-1"> {% if sort == a.product %}
                                                    <a href="{{sort_product}}" class="{{  order|lower }}">{{text_product}}</a>
                                              {% else %}
                                                    <a href="{{sort_product}}">{{text_product}}</a>
                                                {% endif %}
                                            </td>
                                            <td class="col-md-1"> {% if sort == p.price %}
                                                    <a href="{{sort_price}}" class="{{ order|lower }}">{{text_price}}</a>
                                              {% else %}
                                                    <a href="{{sort_price}}">{{text_price}}</a>
                                                {% endif %}
                                            </td>
                                            <td class="col-md-2">{{text_mail}}</td>
                                            <td class="col-md-1">{{text_name}}</td>
                                            <td class="col-md-2">{{text_comment}}</td>
                                            <td class="col-md-1">{{text_statuse}}</td>
                                            <td class="col-md-1">{{text_quantity}}</td>
                                        </tr>
                                        {% if processed %}
                                        {% for mail in processed %}
                                        <tr>
                                            <td class="col-md-1"><input type="checkbox" name="selected[]" data-id="{{ mail.id }}"></td>
                                            <td class="col-md-1">{{ mail.id}}</td>
                                            <td class="col-md-1">{{ mail.time}}</td>
                                            <td class="col-md-1">
                                                <a href="{{ mail.edit}}">{{ mail.product}}
                                                    {%  for value  in mail.optionsas %}
                                                        <p>{{ value.option_type }} - {{ value.option_name }} - {{ value.option_quantity }}</p>
                                                    {% endfor %}
                                                </a>
                                            </td>
                                                <td class="col-md-1">{{mail.price}}</td>
                                                <td class="col-md-2">{{mail.email}}</td>
                                                <td class="col-md-1">{{mail.name}}</td>
                                                <td class="col-md-2">{{mail.comment}}
