{% if (histories) %}
  <button type="button" onclick="$('#record-constructor-block tr.filter-tr').toggle();" class="btn btn-default pull-right" data-toggle="tooltip" title="{{ button_filter }}"><i class="fa fa-search"></i> {{ button_filter }}</button>
  <div class="btn-group pull-right mr-3">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-arrows-v"></i> {{ button_limit }}&nbsp;&nbsp;&nbsp;<span class="caret"></span></button>
    <ul class="dropdown-menu special-dropdown">
      <li class="active"><a href="javascript:void(0)" onclick="record_limit({a:this});"><input type="radio" name="limit" value="10" class="hide" checked="checked"/>10</a></li>
      <li><a href="javascript:void(0)" onclick="record_limit({a:this});"><input type="radio" name="limit" value="25" class="hide"/>25</a></li>
      <li><a href="javascript:void(0)" onclick="record_limit({a:this});"><input type="radio" name="limit" value="50" class="hide"/>50</a></li>
      <li><a href="javascript:void(0)" onclick="record_limit({a:this});"><input type="radio" name="limit" value="100" class="hide"/>100</a></li>
    </ul>
  </div>
  <button type="button" onclick="make_full_width_action({a:this});" class="btn btn-default pull-right mr-3" data-toggle="tooltip" title="{{ button_full_width }}"><i class="fa fa-arrows-h"></i> {{ button_full_width }}</button>
  <div class="btn-group">
    <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-trash-o"></i> {{ button_delete_menu }}&nbsp;&nbsp;&nbsp;<span class="caret"></span></button>
    <ul class="dropdown-menu special-dropdown">
      <li><a onclick="confirm('{{ text_are_you_sure }}') ? make_delete_action({a:this,b:'record',c:'all'}) : false;">{{ button_delete_all }}</a></li>
      <li><a onclick="confirm('{{ text_are_you_sure }}') ? make_delete_action({a:this,b:'record',c:'all_selected'}) : false;">{{ button_delete_selected }}</a></li>
    </ul>
  </div>
{% endif %}
<button type="button" onclick="$('a[href=#record-constructor-block]').click();$(this).html('<div class=\'spinner\'><div class=\'bounce1\'></div><div class=\'bounce2\'></div><div class=\'bounce3\'></div></div>');" class="btn btn-primary button-loading-white"><i class="fa fa-refresh"></i> {{ button_update }}</button>
<div class="special-margin"></div>
<div class="table-responsive">
  <table class="table table-bordered main-table-data">
    <thead>
      <tr>
        <td width="1" style="text-align: center;"><input type="checkbox" onclick="$('#history-record input[name*=\'selected\']').attr('checked', this.checked);" /></td>
        <td class="text-left" width="15%">{{ column_product_image }}</td>
        <td class="text-left" width="15%"><a href="javascript:void(0)" onclick="record_sort({a:this,b:'pd.name'});">{{ column_product_name }}</a></td>
        <td class="text-left" width="15%"><a href="javascript:void(0)" onclick="record_sort({a:this,b:'r.email'});">{{ column_email }}</a></td>
        <td class="text-left" width="15%"><a href="javascript:void(0)" onclick="record_sort({a:this,b:'r.telephone'});">{{ column_telephone }}</a></td>
        <td class="text-left"><a href="javascript:void(0)" onclick="record_sort({a:this,b:'r.date_added'});">{{ column_date_added }}</a></td>
        <td class="text-left"><a href="javascript:void(0)" onclick="record_sort({a:this,b:'r.status'});">{{ column_processed }}</a></td>
        <td class="text-center">{{ column_action }}</td>
      </tr>
      <tr class="filter-tr">
        <td class="text-center fixed-thead"></td>
        <td class="text-center fixed-thead"></td>
        <td class="text-center fixed-thead input-group-sm"><input type="text" name="filter_product_name" value="" class="form-control"/></td>
        <td class="text-center fixed-thead input-group-sm"><input type="text" name="filter_email" value="" class="form-control"/></td>
        <td class="text-center fixed-thead input-group-sm"><input type="text" name="filter_telephone" value="" class="form-control"/></td>
        <td class="text-center fixed-thead input-group-sm"><input type="text" name="filter_date_added" value="" class="form-control datetime"/></td>
        <td class="text-center fixed-thead input-group-sm">
          <select name="filter_status" class="form-control">
            <option value="*"></option>
            <option value="1">{{ text_yes }}</option>
            <option value="0">{{ text_no }}</option>
          </select>
        </td>
        <td class="text-center fixed-thead">
          <button class="btn btn-default btn-sm button-loading" type="button" data-toggle="tooltip" title="{{ button_filter }}" id="submit-filter-record-form"><span class="h-btn-i"><i class="fa fa-search"></i> </span><span class="h-btn-t">{{ button_filter }}</span</button>
          <button class="btn btn-default btn-sm button-loading" type="button" data-toggle="tooltip" title="{{ button_clear_filter }}" id="clear-filter-record-form"><span class="h-btn-i"><i class="fa fa-eraser"></i> </span><span class="h-btn-t">{{ button_clear_filter }}</span></button>
        </td>
      </tr>
    </thead>
    <tbody>
    {% if (histories) %}
      {% for history in histories %}
      <tr>
        <td style="text-align: center;"><input type="checkbox" name="selected[]" value="{{ history['record_id'] }}" /></td>
        <td class="text-center">
          <a href="{{ history['product_edit'] }}" target="_blank">
            <img src="{{ history['product_image'] }}" alt="{{ history['product_name'] }}" class="img-thumbnail" />
          </a>
        </td>
        <td class="text-left">
					<a href="{{ history['product_edit'] }}" target="_blank">{{ history['product_name'] }}</a>
					{% if (history['option_name'] and history['option_value']) %}
						<br>{{ history['option_name'] }}: {{ history['option_value'] }}
					{% endif %}
				</td>
        <td class="text-left">
          {% if (history['email']) %}
            {{ history['email'] }}
          {% else %}
            {{ text_email_not_provided }}
          {% endif %}
        </td>
        <td class="text-left">
          {% if (history['telephone']) %}
            {{ history['telephone'] }}
          {% else %}
            {{ text_telephone_not_provided }}
          {% endif %}
        </td>
        <td class="text-left">{{ history['date_added'] }}</td>
        <td class="text-left">{{ history['status'] }}</td>
        <td class="text-center">
          <button type="button" class="btn btn-primary button-loading-white" onclick="open_record({a:'{{ history['record_id'] }}'});" data-toggle="tooltip" title="" data-original-title="{{ button_open }}"><i class="fa fa-eye"></i></button>
          {% if (history['banned_status']) %}
          <button type="button" class="btn btn-default button-loading" onclick="make_banned_action({a:this,b:'{{ history['record_id'] }}',c:'remove'});" data-toggle="tooltip" title="" data-original-title="{{ button_remove_banned }}"><i class="fa fa-unlock-alt"></i></button>
          {% else %}
          <button type="button" class="btn btn-warning button-loading-white" onclick="make_banned_action({a:this,b:'{{ history['record_id'] }}',c:'add'});" data-toggle="tooltip" title="" data-original-title="{{ button_add_banned }}"><i class="fa fa-lock"></i></button>
          {% endif %}
          <button type="button" class="btn btn-warning button-loading-white" onclick="confirm('{{ text_are_you_sure }}') ? make_delete_action({a:this,b:'record',c:'selected',d:'{{ history['record_id'] }}'}) : false;" data-toggle="tooltip" title="" data-original-title="{{ button_delete }}"><i class="fa fa-trash-o"></i></button>
        </td>
      </tr>
      {% endfor %}
      {% else %}
        <tr>
          <td class="text-center" colspan="8">{{ text_no_results }}</td>
        </tr>
      {% endif %}
    </tbody>
    <tfoot>
      <tr>
        <td colspan="8">
          <div class="row">
            <div class="col-sm-6 text-left">{{ pagination }}</div>
            <div class="col-sm-6 text-right fixed-pagination-results">{{ results }}</div>
          </div>
        </td>
      </tr>
    </tfoot>
  </table>
</div>
<script type="text/javascript">
  $('#history-record input[name=\'filter_email\']').autocomplete({
    'source': function (request, response) {
      $.ajax({
        url: 'index.php?route=extension/ocdevwizard/{{ _name }}/autocomplete_record&{{ token }}&filter_email=' + encodeURIComponent(request),
        dataType: 'json',
        success: function (json) {
          response($.map(json, function (item) {
            if (item['record_id']) {
              return {
                value: item['record_id'],
                label: item['email']
              }
            }
          }));
        }
      });
    },
    'select': function (item) {
      $('#history-record input[name=\'filter_email\']').val(item['label']);
    }
  });

  $('#history-record input[name=\'filter_telephone\']').autocomplete({
    'source': function (request, response) {
      $.ajax({
        url: 'index.php?route=extension/ocdevwizard/{{ _name }}/autocomplete_record&{{ token }}&filter_telephone=' + encodeURIComponent(request),
        dataType: 'json',
        success: function (json) {
          response($.map(json, function (item) {
            if (item['record_id']) {
              return {
                value: item['record_id'],
                label: item['telephone']
              }
            }
          }));
        }
      });
    },
    'select': function (item) {
      $('#history-record input[name=\'filter_telephone\']').val(item['label']);
    }
  });

  $('#history-record input[name=\'filter_product_name\']').autocomplete({
    'source': function (request, response) {
      $.ajax({
        url: 'index.php?route=extension/ocdevwizard/{{ _name }}/autocomplete_record&{{ token }}&filter_product_name=' + encodeURIComponent(request),
        dataType: 'json',
        success: function (json) {
          response($.map(json, function (item) {
            if (item['product_id']) {
              return {
                value: item['product_id'],
                label: item['product_name']
              }
            }
          }));
        }
      });
    },
    'select': function (item) {
      $('#history-record input[name=\'filter_product_name\']').val(item['label']);
    }
  });

  $(document).on("focus", '#history-record .datetime', function() {
    $(document).not('.bootstrap-datetimepicker-widget:first').remove();
    
    $('.datetime').datetimepicker({
      format:     'YYYY-MM-DD',
      formatDate: 'YYYY-MM-DD',
    });
  });
</script>