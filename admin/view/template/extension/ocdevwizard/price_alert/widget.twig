<div class="tile tile-primary">
  <div class="tile-heading">
    {{ heading_title }}
  </div>
  <div class="tile-body">
  	<i class="fa fa-envelope-o" aria-hidden="true"></i>
  	<h2 class="pull-right">{{ total }}</h2>
		<div class="table-responsive" style="border:0;">
			<table class="table" style="margin-bottom:0;">
				{% if (results) %}
					{% for result in results %}
			    	<tr>
			    		<td style="padding-left:0;padding-right:0;">{{ result['name'] }}</td>
			    		<td style="padding-left:0;padding-right:0;" class="text-right">{{ result['total_0'] }} / {{ result['total_1'] }}</td>
			    	</tr>
		    	{% endfor %}
	    	{% endif %}
  		</table>
  	</div>
  </div>
  <div class="tile-footer"><a href="{{ link }}">{{ button_view_more }}</a></div>
</div>